<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/line_main"
    tools:context=".LineActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="180dp">

    <Button
        android:id="@+id/btn_line1"
        android:background="@drawable/line_line1"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 1"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_line2"
        android:background="@drawable/line_line2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 2"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_line3"
        android:background="@drawable/line_line3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 3"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_line4"
        android:background="@drawable/line_line4"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 4"
        android:onClick="onClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp">

    <Button
        android:id="@+id/btn_line5"
        android:background="@drawable/line_line5"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 5"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_line6"
        android:background="@drawable/line_line6"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 6"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_line7"
        android:background="@drawable/line_line7"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 7"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btn_line8"
        android:background="@drawable/line_line8"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="LINE 8"
        android:onClick="onClick" />

    </LinearLayout>

</LinearLayout>