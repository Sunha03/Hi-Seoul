<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:actionBarStyle">@style/CustomEditText</item>
    </style>

    <style name="CustomTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/silkscreen</item>
    </style>

    <style name="CustomEditText" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/silkscreen</item>
    </style>

</resources>
